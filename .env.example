# Application Settings
APP_VERSION=1.0.0
APP_NAME="FastAPI React Starter"
APP_DESCRIPTION="FastAPI React Starter Template"
ENVIRONMENT=development

# Database Settings - PostgreSQL for production
DB_NAME=fastapi_db
DB_USER=postgres
DB_PASSWORD=your_postgres_password
DB_HOST=postgres
DB_PORT=5432

# Alternative: SQLite for local development
# DATABASE_URL="sqlite+aiosqlite:///./app.db"

# JWT Settings
SECRET_KEY=your-secret-key-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS Settings - Update YOUR_CODESPACE_NAME with your actual codespace name
CORS_ORIGINS=["https://YOUR_CODESPACE_NAME-5173.app.github.dev", "https://*.app.github.dev", "http://0.0.0.0:5173", "https://*.githubpreview.dev", "https://*.github.dev"]

# Frontend Settings - Update YOUR_CODESPACE_NAME with your actual codespace name
VITE_API_URL=https://YOUR_CODESPACE_NAME-8000.app.github.dev
